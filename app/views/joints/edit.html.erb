<h1>Editing Joint</h1>

<%= form_for(@joint) do |f| %>
  <% if @joint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@joint.errors.count, "error") %> prohibited this joint from being saved:</h2>

      <ul>
      <% @joint.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <label>Description</label>
  <div class="input-field">
    <%= f.text_area :description, class: "materialize-textarea"%>
  </div>

  <label>Tag</label>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |b| %>
    <p>
      <%= b.check_box %>
      <%= b.label %>
    </p>
  <% end %>

  <label>使用パーツ</label>
  <%= f.collection_check_boxes(:part_ids, Part.all, :id, :name) do |b| %>
    <p>
      <%= b.check_box %>
      <%= b.label %>
    </p>
  <% end %>

  <div class="file-field input-field">
    <div class="btn">
      <span>FILE</span>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text" placeholder="Upload your thumbnail file">
    </div>
  </div>

  <button class="btn waves-effect waves-light" type="submit" name="commit">Save
    <i class="material-icons right">done</i>
  </button>
<% end %>

<br>

<%= link_to 'Show', @joint, class: "btn" %>
<%= link_to 'Back', joints_path, class: "btn" %>
